<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtQuestion"
        android:text="Do you agree?"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_marginTop="20dp"
        android:background="#6495ed"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="35dp"
        android:id="@+id/bYesVote"
        android:text="YES"
        android:layout_gravity="left"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/txtQuestion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:background="#6495ed"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="35dp"
        android:id="@+id/bNoVote"
        android:text="NO"
        android:layout_gravity="right"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignTop="@+id/bYesVote" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comments:"
        android:id="@+id/textView"
        android:layout_above="@+id/ListComment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/ListComment"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_above="@+id/editComment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"> </ListView>

    <EditText
        android:id="@+id/editComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter comment here..."
        android:layout_above="@+id/bSubmitComment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_marginBottom="10dp"
        android:background="#6495ed"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/bSubmitComment"
        android:text="Submit Comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_marginBottom="10dp"
        android:background="#6495ed"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:id="@+id/bBack"
        android:text="Back to Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>