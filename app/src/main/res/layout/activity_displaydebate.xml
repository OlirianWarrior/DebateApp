<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtQuestion"
        android:text="Do you agree?" />

    <Button
        android:id="@+id/bYesVote"
        android:text="YES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bNoVote"
        android:text="NO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtyesvote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This many people said yes" />

    <TextView
        android:id="@+id/txtnovote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This many people said no" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comments:" />

    <ListView
        android:id="@+id/ListComment"
        android:layout_width="match_parent"
        android:layout_height="163dp"> </ListView>

    <EditText
        android:id="@+id/editComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter comment here..."/>

    <Button
        android:id="@+id/bSubmitComment"
        android:text="Submit Comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bBack"
        android:text="Back to Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>